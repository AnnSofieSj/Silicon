@model AccountViewModel

<section id="details">
    <div class="container">

        <div class="menu-bar">
            @await Html.PartialAsync("~/Views/Shared/Component/_AccountNavbarPartial.cshtml")
        </div>

        <div class="account-details">

            <form asp-controller="Account" asp-action="UpdateBasicInfo" method="post" novalidate>
                @await Html.PartialAsync("~/Views/Shared/AccountDetails/_AccountBasicInfoPartial.cshtml")
            </form>

            <div class="divider"></div>

            <form asp-controller="Account" asp-action="UpdateAddressInfo" method="post" novalidate>
                @await Html.PartialAsync("~/Views/Shared/AccountDetails/_AccountAddressInfoPartial.cshtml")
            </form>
        </div>
    </div>
</section>