@model SignInViewModel

@{
    ViewData["Title"] = Model.Title;
}

<section id="signin" class="container">
    <div class="main-holder">
        <div class="section-title">
            <h1>Welcome Back</h1>
            <p>Don't have an account yet? <a asp-controller="Auth" asp-action="SignUp">Sign up here.</a></p>
        </div>
        <div class="login-box">
            <form asp-controller="Auth" asp-action="SignIn" method="post" novalidate>
                <div class="text-danger">
                    @Model.ErrorMessage
                </div>
                <div class="email">
                    <div class="validation">
                        <label asp-for="Form.Email">Email</label>
                        <span asp-validation-for="Form.Email"></span>
                    </div>
                    <input asp-for="Form.Email" />
                    <span></span>
                </div>
                <div class="password">
                    <div class="validation">
                        <label asp-for="Form.Password">Password</label>
                        <span asp-validation-for="Form.Password"></span>
                    </div>
                    <input asp-for="Form.Password" type="password" id="password" />

                </div>
                <div class="checkbox">
                    <input asp-for="Form.RememberMe" type="checkbox" />
                    <label asp-for="Form.RememberMe">Remember me</label>
                </div>
                <button type="submit" class="btn-theme">@Model.Title</button>
                <div class="social-box">
                    @* Måste ändra här sen *@
                    <a asp-controller="Home" asp-action="Index">Forgot your password?</a>
                    <div class="divider"></div>
                    <p>Or sign in with your social network</p>
                    <div class="social-media">
                        <a href="#"><i class="fa-brands fa-google"></i>Google</a>
                        <a href="#"><i class="fa-brands fa-facebook-f"></i>Facebook</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>